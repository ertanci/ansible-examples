---
# Variables for the riak node configuration

# Ethernet interface on which riak should listen
riak:
  iface: eth1
  handoff_port: 8099
  http_port: 8098
  pb_port: 8087
  mountpoint: /
  #partition: /dev/mapper/ubuntu--server--1204--x64-root
  partition: /dev/mapper/VolGroup-lv_root
  physical_disk: sda
  scheduler: noop
  backend: bitcask
  ring_size: 64
  log_rotate: 5

riakcs:
  admin_email: bob@admin.com
  admin_key: foo
  admin_secret: bar
  admin_user: bob
  iface: eth1
  version: 1.3.1
stanchion:
  iface: eth1
