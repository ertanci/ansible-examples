global
        log 127.0.0.1  local0
        log 127.0.0.1  local1 notice
        maxconn        12083
        user           haproxy
        group          haproxy
        spread-checks  5
        daemon

defaults
        log           global
        option        dontlognull
        option        redispatch
        option        allbackups
        no option     httpclose
        retries       3
        maxconn       12083
        timeout http-request    10s
        timeout queue           1m
        timeout connect         10s
        timeout client          1m
        timeout server          1m
        timeout http-keep-alive 10s
        timeout check           10s

frontend riak_cs
        bind          0.0.0.0:8080 transparent
        mode          http
        option        httplog
        capture       request header Host len 64
        default_backend   riak_cs_backend if good_ips

backend riak_cs_backend
        mode          http
        balance       roundrobin
{% for host in groups['riakcs_cluster'] %}
{% set ip_addr = hostvars[host]['ansible_' ~ riakcs.iface]['ipv4']['address']  %}
        server        riakcs{{ loop.index }} {{ ip_addr }}:8080 weight 1 maxconn 12083 check
{% endfor %}